           <!-- ad -->
            <div class="section-row text-center">
                  <a href="#" style="display: inline-block;margin: auto;">
                  <img class="img-responsive"><%= image_tag 'ad-2.jpg'%>
                  </a>
            </div>
            <!-- ad -->
          </div>
          <!-- /Post content -->

          <%= render partial: "hotels/sidebar" %>

        </div>
