     <div class="page-header">
        <div class="container">
          <div class="row">
            <div class="col-md-10">
              <ul class="page-header-breadcrumb">
                <li><a href="/">Home</a></li>
                <li>セブ島ブログ</li>
              </ul>
              <h1>セブ島ブログ一覧</h1>
            </div>
          </div>
        </div>
      </div>
      <!-- /Page Header -->
          <!-- section -->
    <div class="section">
      <!-- container -->
      <div class="container">
        <!-- row -->
        <div class="row">
          <div class="col-md-8">
            <div class="row">


            <% @blogs.each do |blog| %>
              <div class="col-md-12">
                <div class="post post-row">
                  <a class="post-img" href="/blogs/<%= blog.id %>"><image src="<%= blog.blog_image %>"></a>
                  <div class="post-body">
                    <div class="post-meta">
                      <a class="post-category cat-2" href="#">レストラン</a>
                      <span class="post-date"><%= blog.created_at %></span>
                    </div>
                    <h3 class="post-title">
                      <a href="/blogs/<%= blog.id %>"><%= blog.blog_title %></a>
                    </h3>
                    <p><%= blog.blog_text %></p>
                  </div>
                </div>
              </div>
            <% end %>


              <div class="col-md-12">
                <div class="section-row">
                  <button class="primary-button center-block">もっと読む</button>
                </div>
              </div>
            </div>
          </div>



          <%= render partial: "hotels/sidebar" %>

        </div>
        <!-- /row -->
      </div>
      <!-- /container -->
    </div>
    <!-- /section -->

<%= link_to 'New Blog', new_blog_path %>
