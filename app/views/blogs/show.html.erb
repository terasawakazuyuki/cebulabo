    <header id="header">

      <!-- Page Header -->
      <div id="post-header" class="page-header">
      <div class="background-img" style="background-image: url('./img/post-page.jpg');"></div>
        <div class="container">
          <div class="row">
            <div class="col-md-10">
              <div class="post-meta">
<!--                 <a class="post-category cat-2" href="category.html">JavaScript</a>
                <span class="post-date">March 27, 2018</span> -->
              </div>
                <h1>セブラボ×セブ島お役立ち情報ブログ</h1>
            </div>
          </div>
        </div>
      </div>
      <!-- /Page Header -->
    </header>
    <!-- /Header -->


    <!-- section -->
    <div class="section">
      <!-- container -->
      <div class="container">
        <!-- row -->
        <div class="row">
          <!-- Post content -->
          <div class="col-md-8">
            <div class="section-row sticky-container">
              <div class="main-post">
                  <figure class="figure-img">
                  <image src="<%= @blog.blog_image %>" class="img-responsive">
                  <figcaption>イメージ</figcaption>
                  </figure>

                 <h3><%= @blog.blog_title %></h3>
                  <p><%= @blog.blog_text.html_safe %></p>

                  <p><%= link_to '修正', edit_blog_path(@blog) %></p>
                  <p><%= link_to 'ブログ一覧に戻る', blogs_path %></p>

              </div>
              <div class="post-shares sticky-shares">
                <a href="#" class="share-facebook"><i class="fa fa-facebook"></i></a>
                <a href="#" class="share-twitter"><i class="fa fa-twitter"></i></a>
                <a href="#" class="share-google-plus"><i class="fa fa-google-plus"></i></a>
                <a href="#" class="share-pinterest"><i class="fa fa-pinterest"></i></a>
                <a href="#" class="share-linkedin"><i class="fa fa-linkedin"></i></a>
                <a href="#"><i class="fa fa-envelope"></i></a>
              </div>
            </div>

            <!-- ad -->
            <div class="section-row text-center">
                  <a href="#" style="display: inline-block;margin: auto;">
                  <img class="img-responsive"><%= image_tag 'ad-2.jpg'%>
                  </a>
            </div>
            <!-- ad -->
          </div>
          <!-- /Post content -->

          <%= render partial: "hotels/sidebar" %>

        </div>
        <!-- /row -->
      </div>
      <!-- /container -->
    </div>
    <!-- /section -->
